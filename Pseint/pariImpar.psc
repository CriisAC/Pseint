Algoritmo pariImpar
	//escribe un programa que determine si un numero es par o impar

		
	
		Definir num Como Entero;
		
	
		Escribir "Ingrese un número entero:" Sin Saltar;
		Leer num;
		
	
		Si (numero MOD 2) = 0 Entonces
			Escribir num, " es un número PAR.";
		Sino
			Escribir num, " es un número IMPAR.";
		FinSi
		
FinAlgoritmo
